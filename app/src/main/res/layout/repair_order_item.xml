<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">
<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:layout_marginTop="10dp"
    android:layout_marginLeft="10dp"
    android:layout_marginRight="10dp"
    android:padding="10dp"
    android:orientation="vertical">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:id="@+id/order_num"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/text_color_black"
            android:textSize="17sp"
            android:text="工单编号：1244562"/>

        <TextView
            android:id="@+id/order_status"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_alignParentRight="true"
            android:layout_marginTop="0dp"
            android:layout_marginRight="20dp"
            android:text="未处理"
            android:textColor="#00a9ab"
            android:textSize="17sp" />

        <ImageView
            android:id="@+id/location"
            android:layout_width="70dp"
            android:layout_height="19dp"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:src="@mipmap/location_icon"
            android:visibility="gone"/>
    </RelativeLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:layout_marginTop="10dp"
        android:layerType="software"
        android:background="@drawable/dash_line"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="10dp">
        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:textColor="@color/text_color_black"
            android:layout_weight="1"
            android:textSize="15sp"
            android:text="用户编号"/>
        <TextView
            android:id="@+id/order_userNum"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:textColor="#777777"
            android:layout_weight="3"
            android:textSize="15sp"/>

    </LinearLayout>

   <LinearLayout
       android:layout_width="match_parent"
       android:layout_height="wrap_content"
       android:orientation="horizontal"
       android:layout_marginTop="10dp">
       <TextView
           android:layout_width="0dp"
           android:layout_height="wrap_content"
           android:textColor="@color/text_color_black"
           android:layout_weight="1"
           android:textSize="15sp"
           android:text="用户名"/>
       <TextView
           android:id="@+id/order_name"
           android:layout_width="0dp"
           android:layout_height="wrap_content"
           android:textColor="#777777"
           android:layout_weight="3"
           android:textSize="15sp"
           android:text="张三"/>
   </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="10dp">
        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:textColor="@color/text_color_black"
            android:layout_weight="1"
            android:textSize="15sp"
            android:text="台区"/>
        <TextView
            android:id="@+id/order_taiqu"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:textColor="#777777"
            android:layout_weight="3"
            android:textSize="15sp"
            android:text="12区"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="10dp">
        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:textColor="@color/text_color_black"
            android:layout_weight="1"
            android:textSize="15sp"
            android:text="供电所"/>
        <TextView
            android:id="@+id/order_gds"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:textColor="#777777"
            android:layout_weight="3"
            android:textSize="15sp"
            android:text="郑州市经开区供电所"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="10dp">
        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:textColor="@color/text_color_black"
            android:layout_weight="1"
            android:textSize="15sp"
            android:text="管理人"/>
        <TextView
            android:id="@+id/order_manager"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:textColor="#777777"
            android:layout_weight="3"
            android:textSize="15sp"
            android:text="李四"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="10dp">
        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:textColor="@color/text_color_black"
            android:layout_weight="1"
            android:textSize="15sp"
            android:text="问题描述"/>
        <TextView
            android:id="@+id/order_des"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:textColor="#777777"
            android:layout_weight="3"
            android:textSize="15sp"
            android:text="线路老化"/>
    </LinearLayout>
    <View
        android:id="@+id/fg_ling"
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:layout_marginTop="10dp"
        android:layerType="software"
        android:background="@drawable/dash_line"/>
    <LinearLayout
        android:id="@+id/bottom_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="10dp">
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical">
            <TextView
                android:id="@+id/jushou"
                android:layout_width="50dp"
                android:layout_height="25dp"
                android:textColor="@color/theme_color"
                android:layout_gravity="center_horizontal"
                android:textSize="14sp"
                android:gravity="center"
                android:background="@drawable/green_rect_bg"
                android:text="拒收"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical">

            <TextView
                android:id="@+id/benren"
                android:layout_width="50dp"
                android:layout_height="25dp"
                android:background="@drawable/green_rect_bg"
                android:layout_gravity="center_horizontal"
                android:gravity="center"
                android:text="本人"
                android:textColor="@color/theme_color"
                android:textSize="14sp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical">

            <TextView
                android:id="@+id/dispatching"
                android:layout_width="50dp"
                android:layout_height="25dp"
                android:textColor="@color/theme_color"
                android:textSize="14sp"
                android:background="@drawable/green_rect_bg"
                android:layout_gravity="center_horizontal"
                android:gravity="center"
                android:text="下派"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical">
            <TextView
                android:id="@+id/assist"
                android:layout_width="50dp"
                android:layout_height="25dp"
                android:textColor="@color/theme_color"
                android:textSize="14sp"
                android:gravity="center"
                android:background="@drawable/green_rect_bg"
                android:layout_gravity="center_horizontal"
                android:text="协助"/>
        </LinearLayout>
    </LinearLayout>
</LinearLayout>
</LinearLayout>
